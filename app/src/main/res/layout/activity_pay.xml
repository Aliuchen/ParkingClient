<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PayActivity"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值账号："
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_moneyTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15591485221"
                android:textColor="#FF0000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额："
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_recharge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FF0000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/layout_money"
            >
            <TextView
                android:id="@+id/tx_50"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="50"
                android:textSize="20sp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tx_100"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="100"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.3"
                >

            </TextView>

            <TextView
                android:id="@+id/tx_200"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="200"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/layout_end"
            >

            <TextView

                android:id="@+id/tx_500"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="500"
                android:textSize="20sp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tx_1000"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="1000"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.3"
                >

            </TextView>

            <EditText
                android:id="@+id/et_custom"
                android:layout_width="70dp"
                android:layout_height="54dp"
                android:hint="自定义金额"
                android:inputType="number"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                >
            </EditText>
        </LinearLayout>

    </LinearLayout>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
    <Button
        android:id="@+id/tvPay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:background="#FFEC8B"
        android:gravity="center"
        android:text="立即充值"
        android:textColor="#000000" />

</RelativeLayout>

</LinearLayout>

