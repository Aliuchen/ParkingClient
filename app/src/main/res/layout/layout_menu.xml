<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/blue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_user_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:text="刘晨 | 15591485221"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:ignore="MissingConstraints"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/back"
                android:layout_weight="0.2"
                android:src="@mipmap/money_bag"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="钱包"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:id="@+id/title"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="10.00"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_money"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/money_goto"
                />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@mipmap/first"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="会员"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="VIP 1"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_vip"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/vip_goto"
                />

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@mipmap/mycar"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="我的车辆"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="宝马"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_car"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/car_goto"
                />

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@mipmap/my_reward_manage"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="我的订单"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_order"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/order_goto"
                />

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@mipmap/personal"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="个人信息"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_person"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/person_goto"
                />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@mipmap/set"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="设置"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_weight="0.2"

                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center_vertical|right"
                android:textSize="20sp"
                android:id="@+id/menu_set"
                android:layout_weight="0.8"

                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right"
                android:layout_weight="0.1"
                android:id="@+id/set_goto"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>