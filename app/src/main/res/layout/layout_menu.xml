<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/blue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_user_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            


            <TextView
                android:id="@+id/user_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="182****5882"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:ignore="MissingConstraints"
        >
        <com.example.parking.com.example.style.nav_bar
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            my:icon="@mipmap/money_bag"
            my:hint="钱包"
            >
        </com.example.parking.com.example.style.nav_bar>

        <com.example.parking.com.example.style.nav_bar
            android:id="@+id/vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            my:icon="@mipmap/first"
            my:hint="会员"
            >
        </com.example.parking.com.example.style.nav_bar>

        <com.example.parking.com.example.style.nav_bar
            android:id="@+id/mycar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            my:icon="@mipmap/mycar"
            my:hint="我的车辆"
            >
        </com.example.parking.com.example.style.nav_bar>

        <com.example.parking.com.example.style.nav_bar
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            my:icon="@mipmap/my_reward_manage"
            my:hint="我的订单"
            >
        </com.example.parking.com.example.style.nav_bar>

        <com.example.parking.com.example.style.nav_bar
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            my:icon="@mipmap/personal"
            my:hint="个人信息"
            >
        </com.example.parking.com.example.style.nav_bar>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/quit"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="安全退出"
            android:textSize="30sp"
            >
        </Button>


    </LinearLayout>




</LinearLayout>